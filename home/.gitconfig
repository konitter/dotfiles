[user]
	name = konitter
	email = web.kony@gmail.com
[core]
	excludesfile = /Users/konitter/.gitignore
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[paget]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[alias]
	g = git
	st = status
	ad = add
	c = commit
	br = branch
	ba = branch -a
	co = checkout
	cb = checkout -b
	mno = merge --no-ff
	msq = merge --squash
	di = diff
	sh = show
	lg = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(cyan)%d%Creset %s %Cgreen(%cr) %C(black bold)<%an>%Creset' --abbrev-commit --date=relative
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	back = reset --soft HEAD^
	pl = !git pull && git submodule update --init
